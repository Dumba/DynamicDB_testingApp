@using System.Web.UI.WebControls
@model Entitron.DBTable
@{
    ViewBag.Title = "CreateIndex";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnAddColumn").click(function () {
            $('#ColumnTemplate').clone(true).insertAfter('#ColumnTemplate')
            return false;
        });
    });
</script>



<h2>Create Index</h2>
@using (Html.BeginForm("AddIndex", "DBManager", new {@appName =Model.AppName, @tableName=Model.tableName}, FormMethod.Post, null))
{
    <table class="table table-bordered" id="mytable">
        <thead>
        <tr>
            <th>Název</th>
            <td>@Html.TextBox("indexName")</td>
        </tr>
        <tr>
            <th>Vyberte sloupec</th>
            <td id="ColumnTemplate">@Html.DropDownList("indexColumns", new SelectList(Model.columns.Select(c => c.Name), "Name"))</td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Actions:</td>
            <td><button id="btnAddColumn" class="btn btn-success">Add Column</button></td>
        </tr>
        </tbody>
    </table>
    <button type="submit">Create Index</button>
    @Html.ActionLink("Back", "Index", new { @appName = Model.AppName })
}





