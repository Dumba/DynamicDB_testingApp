@using Entitron
@model List<DBTable>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Table Name</th>
            <th colspan="8">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DBTable item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.tableName, "Data", new { @appName = item.AppName, @tableName = item.tableName })</td>
                <td>@Html.ActionLink("Manage", "Details", new { @appName = item.AppName, @tableName = item.tableName })</td>
                <td>@Html.ActionLink("DropTable", "DropTable", new { @appName = item.AppName, @tableName = item.tableName })</td>
                <td>@Html.ActionLink("CreateIndex", "CreateIndex", new { @appName = item.AppName, @tableName = item.tableName })</td>
                <td>@Html.ActionLink("DropIndex", "DropIndex", new { @appName = item.AppName, @tableName = item.tableName })</td>
                <td>@Html.ActionLink("AddPrimaryKey", "CreatePrimaryKey", new { @appName = item.AppName, @tableName = item.tableName })</td>
                <td>@Html.ActionLink("DropPrimaryKey", "DropPrimaryKey", new { @appName = item.AppName, @tableName = item.tableName })</td>
                <td>@Html.ActionLink("AddForeignKey", "CreateForeignKey", new { @appName = item.AppName, @tableName = item.tableName })</td>
                <td>@Html.ActionLink("DropForeignKey", "DropForeignKey", new { @appName = item.AppName, @tableName = item.tableName })</td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Create new", "Create", new { @appName = Request["appName"] })

